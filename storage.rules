rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Allow users to upload result images into a specific path for a battle they are part of.
    // The file name must be in the format: results/{battleId}/{userId}_<timestamp>
    match /results/{battleId}/{fileName} {
        allow write: if request.auth != null &&
                      // Check if the user is part of the battle (creator or opponent)
                      (exists(/databases/$(database)/documents/battles/$(battleId)) && 
                      (request.auth.uid == get(/databases/$(database)/documents/battles/$(battleId)).data.creator.id ||
                       request.auth.uid == get(/databases/$(database)/documents/battles/$(battleId)).data.opponent.id)) &&
                      // Ensure the filename starts with the user's UID
                      fileName.matches(request.auth.uid + '_.*') &&
                      // Limit file size to 5MB
                      request.resource.size < 5 * 1024 * 1024 &&
                      // Allow only image types
                      request.resource.contentType.matches('image/.*');

        allow read: if request.auth != null; // Allow logged-in users to read images.
    }

    // Add rules for other paths like KYC, payment proofs etc. as needed.
    // For example, for KYC:
    // match /kyc/{userId}/{fileName} {
    //   allow write: if request.auth.uid == userId;
    //   allow read: if request.auth.uid == userId; // Or only admins
    // }

  }
}
