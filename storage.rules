rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read and write to their own avatar folder
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to write to their own results folder
    match /results/{battleId}/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null; // Admins or other users might need to see results
    }

    // Allow users to write to their own KYC folder
    match /kyc/{userId}/{allPaths=**} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow users to write to their own deposit folder
    match /deposits/{userId}/{allPaths=**} {
        allow write: if request.auth != null && request.auth.uid == userId;
        allow read: if request.auth != null; // Allow admins to read
    }
  }
}
