
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function for auth check
    function isAuthenticated() {
      return request.auth != null;
    }

    // Images can be read by anyone (public access for avatars, etc.)
    // Writes are restricted to authenticated users for their own files.
    match /{allPaths=**} {
      allow read;
      allow write: if isAuthenticated();
    }

    // Specific rule for user avatars - only the user can write to their avatar path
    match /avatars/{userId} {
        allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Specific rule for KYC documents - only the user can write
    match /kyc/{userId}/{allPaths=**} {
         allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Result screenshots
    match /results/{battleId}/{userId} {
        allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Deposit screenshots
    match /deposits/{userId}/{allPaths=**} {
        allow write: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}
