rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // This rule covers avatars, results, kyc, and deposits.
    // It allows an authenticated user to write to a path that contains their own UID.
    match /{folder}/{userId}/{fileName} {
      // Allow public read for avatars for UI display.
      // Allow authenticated reads for results (for admin/opponent verification).
      allow read: if (folder == 'avatars' || folder == 'results') && request.auth != null;
      
      // Allow write only if the user is authenticated and the path's userId matches their own UID.
      // This single rule secures uploads for all features.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
